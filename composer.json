{
    "name": "shalomsam/core",
    "description": "Core PHP Framework",
    "type": "project",
    "license": "MIT",
    "keywords": [ "php", "framework", "Core", "Core PHP Framework" ],
    "autoload": {
        "psr-4": { "Core\\": "src/Core" }
    },
    "prefer-stable": true,
    "require": {
        "smarty/smarty": ">=3.1.19",
        "filp/whoops": "1.*",
        "php": ">=5.4.0"
    },
    "suggest": {
        "ext-apc": "Allows for faster performance of Core Framework through APC caching",
        "ext-opcache": "Allows for faster performance of Core Framework through opCache(Zend Optimizer+) caching. opCache requires php 5.5+"
    },
    "authors": [
        {
            "name": "Shalom Sam",
            "email": "shalom.s@coreframework.in"
        }
    ],
    "scripts": {
        "post-install-cmd": [
            "bower install",
            "Core\\Scripts\\installer::install"
        ],
        "post-update-cmd": [
            "bower install",
            "Core\\Scripts\\installer::install"
        ]
    }
}
